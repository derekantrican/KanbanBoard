<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="KanbanBoard.AddBoardWindow"
        Title=""
        WindowStartupLocation="CenterOwner"
        HasSystemDecorations="False"
        Width="400"
        Height="200">
    <Border BorderBrush="{DynamicResource ChromeBlackMedium}" BorderThickness="2.2" Padding="16">
        <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">
            <TextBlock FontSize="24" FontWeight="Light" Grid.ColumnSpan="2" 
                       Text="{Binding Title}" Margin="0,0,0,8"/>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,12">
                <TextBlock FontWeight="Bold" Text="Name" Margin="0,0,0,8"/>
                <TextBox Watermark="Enter board name here" Text="{Binding Name}"/>
            </StackPanel>
            <Button Grid.Row="2" Content="{Binding SaveButtonText}"
                    Command="{Binding Save}" Margin="0,0,4,0"/>
            <Button Grid.Row="2" Grid.Column="1" Content="Cancel"
                    Command="{Binding Cancel}" Margin="4,0,0,0"/>
        </Grid>
    </Border>
</Window>
