<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="KanbanBoard.MainWindow"
        Title="Kanban Board"
        WindowState="Maximized">
    
    <DockPanel>
        <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto" RowDefinitions="Auto" Background="{DynamicResource ChromeBlackMedium}">
            <Menu Name="menuBoard" Grid.Column="0" Grid.Row="0" />
            <Menu Name="menuBoardSetting" Grid.Column="1" Grid.Row="0">
                <MenuItem Name="menuItemBoardEdit" Header="" />
                <MenuItem Name="menuItemBoardDelete" Header="" />
            </Menu>
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Name="stackPanelColumn" Orientation="Horizontal" />
                <Button Name="buttonAddColumn" IsVisible="False" VerticalAlignment="Top">Add Column</Button>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
    
</Window>
